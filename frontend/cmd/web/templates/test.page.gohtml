{{template "base" .}}

{{define "content" }}
    <div class="container">
        <div class="row">
            <div class="col">
                <h1 class="mt-5">Test microservices</h1>
                <hr>
                <a id="broker-btn" class="btn btn-outline-secondary" href="javascript:void(0)">Test broker</a>
                <a id="auth-broker-btn" class="btn btn-outline-secondary" href="javascript:void(0)">Test Auth</a>
                <a id="log-broker-btn" class="btn btn-outline-secondary" href="javascript:void(0)">Test Logging</a>
                <a id="mail-broker-btn" class="btn btn-outline-secondary" href="javascript:void(0)">Test Mail</a>
                <div id="output" class="mt-5" style="outline: 1px solid silver; padding: 2em;">
                    <span class="text-muted">Output shows here...</span>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col">
                <h4 class="mt-5">Sent</h4>
                <div class="mt-1" style="outline: 1px solid silver; padding: 2em;">
                    <pre id="payload"><span class="text-muted">Nothing sent yet...</span></pre>
                </div>
            </div>
            <div class="col">
                <h4 class="mt-5">Received</h4>
                <div class="mt-1" style="outline: 1px solid silver; padding: 2em;">
                    <pre id="received"><span class="text-muted">Nothing received yet...</span></pre>
                </div>
            </div>
        </div>
    </div>
{{end}}

{{define "js"}}
    <script>
        let brokerBtn = document.getElementById("broker-btn");
        let authBrokerBtn = document.getElementById("auth-broker-btn")
        let logBrokerBtn = document.getElementById("log-broker-btn")
        let mailBrokerBtn = document.getElementById("mail-broker-btn")
        let output = document.getElementById("output");
        let payload = document.getElementById("payload");
        let received = document.getElementById("received");
        brokerBtn.addEventListener("click", function(){
            const body = {
                method:'POST', 
                body: JSON.stringify({message: "Hello From UI!", sender: "Your friendly developer!!"})
            }
            fetch({{print .BrokerURL}}, body)
            .then((response)=>response.json())
            .then((data)=>{
                payload.innerHTML += JSON.stringify({message: "Hello From UI!", sender: "Your friendly developer!!"});
                received.innerHTML +=JSON.stringify(data);               
                output.innerHTML += `<br><strong>Respnonse from broker service</strong>": ${data.message}`;
            }) 
            .catch((err)=>{
                output.innerHTML += "<br><br>Error: "+err;
            })           
        })

        authBrokerBtn.addEventListener("click", function(){
            const headers = new Headers();
            headers.append("Content-Type", "application/json")
            const body = {
                method:'POST', 
                body: JSON.stringify({email: "admin@example.com", password: "verysecret"}),
                headers: headers
            }
            fetch({{print .BrokerURL "signin"}}, body)
            .then((response)=>response.json())
            .then((data)=>{
                payload.innerHTML += JSON.stringify({email: "admin@example.com", password: "verysecret"});
                received.innerHTML +=JSON.stringify(data);            
                output.innerHTML += `<br><strong>Respnonse from broker service</strong>": ${data.message}`;
            }) 
            .catch((err)=>{
                output.innerHTML += "<br><br>Error: "+err;
            })           
        })
        logBrokerBtn.addEventListener("click", function(){
            const headers = new Headers();
            headers.append("Content-Type", "application/json")
            const body = {
                method:'POST', 
                body: JSON.stringify({name: "sample logger", data: "sample log data "}),
                headers: headers
            }
            fetch({{print .BrokerURL "log"}}, body)
            .then((response)=>response.json())
            .then((data)=>{
                payload.innerHTML += JSON.stringify({name: "sample logger", data: "sample log data "});
                received.innerHTML +=JSON.stringify(data);            
                output.innerHTML += `<br><strong>Respnonse from broker service</strong>": ${data.message}`;
            }) 
            .catch((err)=>{
                output.innerHTML += "<br><br>Error: "+err;
            })           
        })
        mailBrokerBtn.addEventListener("click", function(){
            const headers = new Headers();
            headers.append("Content-Type", "application/json")
            const body = {
                method:'POST', 
                body: JSON.stringify({from: "admin@middle_earth.com", to: "folks@middle_earth.com", subject: "Black rider", message:"Please be inside home"}),
                headers: headers
            }
            fetch({{print .BrokerURL "mail/send"}}, body)
            .then((response)=>response.json())
            .then((data)=>{
                payload.innerHTML += JSON.stringify({from: "admin@middle_earth.com", to: "folks@middle_earth.com", subject: "Black rider", message:"Please be inside home"});
                received.innerHTML +=JSON.stringify(data);            
                output.innerHTML += `<br><strong>Respnonse from broker service</strong>": ${data.message}`;
            }) 
            .catch((err)=>{
                output.innerHTML += "<br><br>Error: "+err;
            })           
        })
    </script>
{{end}}
